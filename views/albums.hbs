<div class="page-title">
  {{!-- Taking first artist of first album --}}
  <h1>Albums for: {{album.[0].artists.[0].name}}</h1>
</div>
<div class="container-items">

  {{#each album}}
  <div class="item-found"> 
    {{#if images.[0].url}}
      <img src="{{images.[0].url}}" alt="Album cover of {{name}}">
    {{else}}
      <img src="/images/album_not_found.jpg" alt="Album img not found">
    {{/if}}
      <h3>{{name}}</h3>
      <a class = "button" href="/tracks/{{id}}">View Tracks</a>
  </div>
  {{/each}}

</div>